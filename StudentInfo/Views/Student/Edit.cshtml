@model StudentInfo.Models.UpdateStudentViewModel
@{
    ViewData["Title"] = "Edit Info";
}
<h2>Edit Student Info</h2>
<form method="post" , action="Edit">

    <div class="form-group">
        <label for="id">Id:</label>
        <input type="guid" class="form-control" id="id" asp-for="Id" readonly>
    </div>
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" id="name" asp-for="Name">
    </div>
    <div class="form-group">
        <label for="class">Class:</label>
        <select class="form-control" id="classId" asp-for="ClassId">
            <option value=1>One</option>
            <option value=2>Two</option>
            <option value=3>Three</option>
            <option value=4>Four</option>
            <option value=5>Five</option>
            <option value=6>Six</option>
            <option value=7>Seven</option>
            <option value=8>Eight</option>
            <option value=9>Nine</option>
            <option value=10>Ten</option>
        </select>
    </div>
    <div class="form-group">
        <label for="dob">DOB:</label>
        <input type="date" class="form-control" id="dob" asp-for="DateOfBirth">
    </div>
    <div class="form-group">
        <label>Gender:</label><br>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" id="male" value=0>
            <label class="form-check-label" for="male">Male</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="radio" asp-for="Gender" id="female" value=1>
            <label class="form-check-label" for="female">Female</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>